require 'bogie'
include Bogie

namespace :db do
  namespace :migrate do
  
    desc 'Migrates <%= file_name.squish.gsub(' ', '_').gsub('-','_').tableize %>'
    task <%= file_name.squish.gsub(' ', '_').gsub('-','_').tableize %>: :environment do
      Bogie.run :<%= file_name.squish.gsub(' ', '_').gsub('-','_').tableize %>
    end

  end
end